body
	font-size 16px
	line-height 18px
	font-family Arial

dropZone
	position absolute
	left 0
	top 0
	bottom 0
	right 0

	&.dropped
		.background
			preview
				display block
			.drop-block
				display none

	.background
		position absolute
		left 50%
		top 50% 
		width 600px
		height 450px
		margin-left -300px
		margin-top -225px

		background url(back.jpg) no-repeat left top


		preview
			display none

		.image-container,
		.drop-block
			position absolute
			left 127px
			top 54px
			width 150px
			-webkit-transform perspective(2200px) rotateX(34deg) rotateY(21deg) rotateZ(-29deg)
			-moz-transform perspective(2200px) rotateX(34deg) rotateY(21deg) rotateZ(-29deg)
			transform perspective(2200px) rotateX(34deg) rotateY(21deg) rotateZ(-29deg)
			height 307px
			overflow hidden

			.hover
				background #905E79


		.drop-block
			box-sizing border-box
			padding-top 70px
			color #fff
			font-size 36px
			line-height 45px
			text-align center

			background #294252
			opacity 0.9
			
		.image-container
			img
				width 100%


		.download
			position absolute
			right 22px
			top 22px
			border-radius 5px
			color #fff
			background #3289CD

			font-size 22px
			text-decoration none
			text-transform uppercase
			font-weight bold
			line-height 72px
			padding 0 54px

